pipeline {
    agent any

    environment {
        PATH = "${PATH}:${getTerraformPath()}"
        TERRAFORM_DIR = "Full-deployment"
    }
    
    stages {
        stage('Approval to Launch Pipeline') {
            steps {
                script {
                    input(
                        id: 'start_confirm',
                        message: 'Ready to Launch the Pipeline?',
                        parameters: [
                            [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Start the Pipeline?', name: 'confirm']
                        ]
                    )
                }
            }
        }

        stage('Terraform Init') {
            steps {
                slackSend(
                    channel: '#stackjenkins',
                    color: '#3498DB',
                    message: """âš™ï¸ *TERRAFORM INIT* âš™ï¸
â–¶ï¸ Status: *hi michael it's richard*
ğŸ‘¨â€ğŸ’» Engineer: *RCLAYE*
ğŸ“‹ Job: ${env.JOB_NAME} [${env.BUILD_NUMBER}]
ğŸ• Time: ${new Date().format("HH:mm:ss")}"""
                )
                sh """
                    cd ${TERRAFORM_DIR}
                    terraform init -migrate-state
                """
            }
        }

        stage('Terraform Plan') {
            steps {
                withCredentials([file(credentialsId: 'clixxx-tfvars', variable: 'TFVARS_FILE')]) {
                    slackSend(
                        channel: '#stackjenkins',
                        color: '#F39C12',
                        message: """ğŸ“ *TERRAFORM PLAN* ğŸ“
â–¶ï¸ Status: *Started*
ğŸ‘¨â€ğŸ’» Engineer: *RCLAYE*
ğŸ“‹ Job: ${env.JOB_NAME} [${env.BUILD_NUMBER}]
ğŸ• Time: ${new Date().format("HH:mm:ss")}"""
                    )
                    sh """
                        cd ${TERRAFORM_DIR}
                        terraform plan -var-file="\$TFVARS_FILE" -out=tfplan -input=false
                    """
                }
            }
        }

        stage('Terraform Apply') {
            steps {
                withCredentials([file(credentialsId: 'clixxx-tfvars', variable: 'TFVARS_FILE')]) {
                    slackSend(
                        channel: '#stackjenkins',
                        color: '#2ECC71',
                        message: """ğŸš€ *TERRAFORM APPLY* ğŸš€
â–¶ï¸ Status: *Started*
ğŸ‘¨â€ğŸ’» Engineer: *RCLAYE*
ğŸ“‹ Job: ${env.JOB_NAME} [${env.BUILD_NUMBER}]
ğŸ• Time: ${new Date().format("HH:mm:ss")}"""
                    )
                    sh """
                        cd ${TERRAFORM_DIR}
                        terraform apply -var-file="\$TFVARS_FILE" -input=false tfplan
                    """
                }
            }
        }

        stage('Approval to Destroy Infrastructure') {
            steps {
                script {
                    input(
                        id: 'destroy_confirm',
                        message: 'Do you want to destroy this environment?',
                        parameters: [
                            [$class: 'BooleanParameterDefinition', defaultValue: false, description: 'Run terraform destroy?', name: 'confirm']
                        ]
                    )
                }
            }
        }

        stage('Terraform Destroy') {
            steps {
                withCredentials([file(credentialsId: 'clixxx-tfvars', variable: 'TFVARS_FILE')]) {
                    slackSend(
                        channel: '#stackjenkins',
                        color: '#E74C3C',
                        message: """ğŸ’¥ *TERRAFORM DESTROY* ğŸ’¥
â–¶ï¸ Status: *Started*
ğŸ‘¨â€ğŸ’» Engineer: *RCLAYE*
ğŸ“‹ Job: ${env.JOB_NAME} [${env.BUILD_NUMBER}]
ğŸ• Time: ${new Date().format("HH:mm:ss")}
âš ï¸ *Removing Infrastructure* âš ï¸"""
                    )
                    sh """
                        cd ${TERRAFORM_DIR}
                        terraform destroy -var-file="\$TFVARS_FILE" -auto-approve
                    """
                }
            }
        }
    }

    post {
        success {
            slackSend(
                channel: '#stackjenkins',
                color: '#2ECC71',
                message: """âœ… *TERRAFORM SUCCESS* âœ…
ğŸ‘¨â€ğŸ’» Engineer: *RCLAYE*
ğŸ“‹ Job: ${env.JOB_NAME} [${env.BUILD_NUMBER}]
ğŸ• Time: ${new Date().format("HH:mm:ss")}
ğŸ Status: *Completed Successfully*"""
            )
            echo "Deployment successful."
        }
        failure {
            slackSend(
                channel: '#stackjenkins',
                color: '#E74C3C',
                message: """âŒ *TERRAFORM FAILURE* âŒ
ğŸ‘¨â€ğŸ’» Engineer: *RCLAYE*
ğŸ“‹ Job: ${env.JOB_NAME} [${env.BUILD_NUMBER}]
ğŸ• Time: ${new Date().format("HH:mm:ss")}
âš ï¸ Status: *Failed*
ğŸ› ï¸ *Check logs for details*"""
            )
            echo "Deployment failed. Check logs."
        }
        always {
            script {
                if (currentBuild.currentResult == 'SUCCESS' && env.STAGE_NAME == 'Terraform Destroy') {
                    slackSend(
                        channel: '#stackjenkins',
                        color: '#9B59B6',
                        message: """ğŸ—‘ï¸ *TERRAFORM DESTROY SUCCESS* ğŸ—‘ï¸
ğŸ‘¨â€ğŸ’» Engineer: *RCLAYE*
ğŸ“‹ Job: ${env.JOB_NAME} [${env.BUILD_NUMBER}]
ğŸ• Time: ${new Date().format("HH:mm:ss")}
ğŸ Status: *Infrastructure Removed*"""
                    )
                } else if (currentBuild.currentResult == 'FAILURE' && env.STAGE_NAME == 'Terraform Destroy') {
                    slackSend(
                        channel: '#stackjenkins',
                        color: '#C0392B',
                        message: """â›” *TERRAFORM DESTROY FAILED* â›”
ğŸ‘¨â€ğŸ’» Engineer: *RCLAYE*
ğŸ“‹ Job: ${env.JOB_NAME} [${env.BUILD_NUMBER}]
ğŸ• Time: ${new Date().format("HH:mm:ss")}
âš ï¸ Status: *Failed to remove infrastructure*"""
                    )
                }
            }
        }
    }
}

def getTerraformPath() {
    return tool(name: 'terraform-14', type: 'terraform')
}
